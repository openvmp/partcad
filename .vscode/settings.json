{
  "partcad.packagePath": "examples",

  "files.trimFinalNewlines": true,
  "files.encoding": "utf8",
  "editor.useTabStops": false,
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.autoIndent": "full",
  "editor.rulers": [80],
  "files.exclude": {
    ".git/**": true,
    "**/__pycache__": true,
    "**/*.egg-info": true,
    "**/.pytest_cache": true,
    "**/apache20.svg": true,
    "**/LICENSE.txt": true,
    ".ocp_vscode": true,
    ".conda": true,
    ".venv": true,
    ".tox": true,
    "**/.partcad": true,
    "docs/build": true,
    "partcad*/build": true,
    "partcad*/dist": true
  },
  "search.exclude": {
    ".git/**": true,
    "**/__pycache__": true,
    "**/*.egg-info": true,
    "**/.pytest_cache": true,
    "**/apache20.svg": true,
    "**/LICENSE.txt": true,
    ".ocp_vscode": true,
    ".conda": true,
    ".venv": true,
    ".tox": true,
    "**/.partcad": true,
    "docs/build": true,
    "partcad*/build": true,
    "partcad*/dist": true
  },
  "markdown.extension.toc.omittedFromToc": {
    "README.md": ["# PartCAD"]
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.testing.pytestArgs": [],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.terminal.executeInFileDir": true,
  "python.terminal.launchArgs": [],
  // TODO(clairbee): "python.analysis.typeCheckingMode": "basic",
  "OcpCadViewer.advanced.autostart": false,
  "yaml.format.bracketSpacing": false,  // prevent YAML formatter from breaking Jinja2 templates
  "esbonio.sphinx.confDir": "",
  "files.eol": "\n"
}
